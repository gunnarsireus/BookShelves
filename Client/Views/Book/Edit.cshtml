@model Client.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h2>Loan book in genre @ViewBag.ShelfName</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ShelfId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" disabled="disabled" />
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="LoanThisBook">
                        <input asp-for="LoanThisBook" />
                        @Html.DisplayNameFor(m => m.LoanThisBook)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>
        <a asp-action="Index" asp-route-id="@Model.ShelfId">Back to list</a>
    </p>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}