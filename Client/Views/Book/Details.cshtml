@model Client.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h2>Details for vehicle belonging to @ViewBag.ShelfName</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreationTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreationTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.InShelf)
        </dt>
        @{ var iidd = Model.Id + "_3"; var cl = Model.InShelf ? "" : "alert-danger";}
        <dd id="@iidd" class="@cl" style="max-width: 50px;">
            @Html.DisplayFor(model => model.InShelfNotInShelf)
        </dd>
    </dl>
</div>
<div>
    @{var listString = "Index/" + Model.ShelfId; }
    <p>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="@listString">Back to list</a>
    </p>
</div>